<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="793.0" prefWidth="1570.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainMenuController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: E8E3D6;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Main Menu" textFill="MAROON">
               <font>
                  <Font name="Century Gothic Bold" size="45.0" />
               </font>
            </Label>
            <Button fx:id="exploreFactsBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleExploreFacts" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: #800000; -fx-background-radius: 10;" text="Explore Fun Facts" textFill="#e8e3d6">
               <font>
                  <Font name="Century Gothic" size="20.0" />
               </font>
               <effect>
                  <Blend mode="DARKEN" />
               </effect>
            </Button>
            <Button fx:id="planTripBtn" mnemonicParsing="false" onAction="#handlePlanTrip" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: #800000; -fx-background-radius: 10;" text="Plan A Trip" textFill="#e8e3d6">
               <font>
                  <Font name="Century Gothic" size="20.0" />
               </font>
            </Button>
            <Button fx:id="memoryEntryBtn" mnemonicParsing="false" onAction="#handleMemoryEntry" prefHeight="55.0" prefWidth="250.0" style="-fx-background-color: #800000; -fx-background-radius: 10;" text="Memory Entry" textFill="#e8e3d6">
               <font>
                  <Font name="Century Gothic" size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
