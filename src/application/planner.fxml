<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F1E7E7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PlannerController">
   <top>
      <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #748DAE; -fx-padding: 15;">
         <children>
            <Label text="Trip Planner" textFill="WHITE">
               <font>
                  <Font name="Century Gothic Bold" size="28.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="20">
               <children>
                  <Button fx:id="monthViewBtn" mnemonicParsing="false" onAction="#showMonthView" style="-fx-background-color: #547792; -fx-text-fill: white;" text="Month View">
                     <font>
                        <Font name="Century Gothic" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="weekViewBtn" mnemonicParsing="false" onAction="#showWeekView" style="-fx-background-color: #547792; -fx-text-fill: white;" text="Week View">
                     <font>
                        <Font name="Century Gothic" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="dayViewBtn" mnemonicParsing="false" onAction="#showDayView" style="-fx-background-color: #547792; -fx-text-fill: white;" text="Day View">
                     <font>
                        <Font name="Century Gothic" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="addEventBtn" mnemonicParsing="false" onAction="#showAddEventDialog" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Event">
                     <font>
                        <Font name="Century Gothic" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="backToMenuBtn" mnemonicParsing="false" onAction="#backToMainMenu" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Back to Main Menu">
                     <font>
                        <Font name="Century Gothic" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <BorderPane>
         <center>
            <!-- Calendar Grid View -->
            <ScrollPane fx:id="calendarScrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
               <content>
                  <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="2.0" style="-fx-background-color: #F1E7E7; -fx-padding: 10;" vgap="2.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </ScrollPane>
         </center>
         <top>
            <!-- Navigation for Month/Year -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
               <children>
                  <Button fx:id="prevBtn" mnemonicParsing="false" onAction="#previousPeriod" style="-fx-background-color: #748DAE; -fx-text-fill: white;" text="&lt; Previous">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Button>
                  <Label fx:id="periodLabel" text="January 2025" textFill="#547792">
                     <font>
                        <Font name="Century Gothic Bold" size="18.0" />
                     </font>
                  </Label>
                  <Button fx:id="nextBtn" mnemonicParsing="false" onAction="#nextPeriod" style="-fx-background-color: #748DAE; -fx-text-fill: white;" text="Next &gt;">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </center>
   <right>
      <!-- Event Details Panel -->
      <VBox fx:id="eventDetailsPanel" prefWidth="300.0" spacing="10" style="-fx-background-color: #FFEAEA; -fx-padding: 15; -fx-border-color: #748DAE; -fx-border-width: 0 0 0 2;">
         <children>
            <Label text="Event Details" textFill="#547792">
               <font>
                  <Font name="Century Gothic Bold" size="16.0" />
               </font>
            </Label>
            <ListView fx:id="eventListView" onMouseClicked="#selectEvent" prefHeight="200.0" style="-fx-background-color: white; -fx-border-color: #748DAE;" />
            <VBox fx:id="eventFormPanel" spacing="10" visible="false">
               <children>
                  <Label text="Event Name:" textFill="#547792">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="eventNameField" style="-fx-border-color: #748DAE;" />
                  <Label text="Date:" textFill="#547792">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="eventDatePicker" style="-fx-border-color: #748DAE;" />
                  <Label text="Time:" textFill="#547792">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="eventTimeField" promptText="HH:MM" style="-fx-border-color: #748DAE;" />
                  <Label text="Location:" textFill="#547792">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="eventLocationField" style="-fx-border-color: #748DAE;" />
                  <Label text="Description:" textFill="#547792">
                     <font>
                        <Font name="Century Gothic" size="12.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="eventDescriptionArea" prefRowCount="3" style="-fx-border-color: #748DAE;" />
                  <HBox spacing="10">
                     <children>
                        <Button fx:id="saveEventBtn" mnemonicParsing="false" onAction="#saveEvent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save">
                           <font>
                              <Font name="Century Gothic" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="editEventBtn" mnemonicParsing="false" onAction="#editEvent" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Edit" visible="false">
                           <font>
                              <Font name="Century Gothic" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="deleteEventBtn" mnemonicParsing="false" onAction="#deleteEvent" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete" visible="false">
                           <font>
                              <Font name="Century Gothic" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="cancelEventBtn" mnemonicParsing="false" onAction="#cancelEventForm" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" text="Cancel">
                           <font>
                              <Font name="Century Gothic" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </right>
</BorderPane>

